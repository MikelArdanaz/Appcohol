<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:mapbox="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fondoAmarillo"
    android:orientation="vertical">

    <Button
        android:id="@+id/bt_mapa_volver"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/mv_mapa_mapa"
        android:layout_alignLeft="@+id/mv_mapa_mapa"
        android:layout_marginLeft="5dp"
        android:background="@drawable/boton_rojo"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:text="Volver"
        android:textColor="@color/blanco"
        android:textSize="20dp"
        android:textStyle="bold" />

    <com.mapbox.mapboxsdk.maps.MapView
        android:id="@+id/mv_mapa_mapa"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        mapbox:mapbox_cameraTargetLat="40.73581"
        mapbox:mapbox_cameraTargetLng="-73.99155"
        mapbox:mapbox_styleUrl="@string/mapbox_style_mapbox_streets"
        mapbox:mapbox_cameraZoom="11"/>

</RelativeLayout>